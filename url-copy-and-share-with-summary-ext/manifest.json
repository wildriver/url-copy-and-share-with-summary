{
    "name": "URL Copy and Share with Summary",
    "description": "A small extension that helps you to copy URL.",
    "author": "@ikedaosushi and Misoni",
    "version": "1.6.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/icon.svg",
        "24": "icons/icon.svg",
        "32": "icons/icon.svg",
        "48": "icons/icon.svg"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.svg"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Open popup.html"
        }
    },
    "permissions": [
        "storage",
        "tabs",
        "clipboardWrite",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://api.groq.com/*",
        "https://openrouter.ai/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}